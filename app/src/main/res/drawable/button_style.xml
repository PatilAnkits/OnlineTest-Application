<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#f3634d"
                android:endColor="#830000"
                android:angle="135"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="#f3634d"
                android:startColor="#830000"
                android:angle="135"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

</selector>